<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标定界面"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btn_decDisZero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="压力系数标定"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/title"
        android:background="@drawable/button_style"
        android:layout_marginTop="50dp"
        android:visibility="invisible"
       />
    <TextView
        android:id="@+id/btn_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/btn_decDisZero"
        android:text="提示信息"
        android:textSize="20sp"

    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="零点标定"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_decZero"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_tishi"
        android:background="@drawable/button_style"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="150N标定"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_150N"
        android:layout_below="@+id/btn_decZero"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="300N标定"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_300N"
        android:layout_below="@+id/btn_150N"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新标定"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_reset"
        android:layout_below="@+id/btn_300N"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回主菜单"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_backMain"
        android:layout_below="@+id/btn_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"/>
</RelativeLayout>